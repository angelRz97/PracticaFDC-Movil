
GenericoDTOsalida {

	List<String> errores;
	Timestamp tiempo;
}


OfertaDTO {

	int id;
	int vacantes;

	String empresa;
	String titulo;
	String descripcion;

	ArrayList<Bytes> imagen;
	ArrayList<EtiquetasDTO> requisitos;

	Enum estado;
}

OfertasDTOsalida {
	
	ArrayList<OfertasDTO> ofertas;

	List<String> errores;
	Timestamp tiempo;
}

OfertaDTOsalida {
	
	OfertaDTO oferta;

	List<String> errores;
	Timestamp tiempo; 
}

NovedadesDTOsalida {

	ArrayList<OfertaDTO> ofertas;
	ArrayList<OfertaDTO> formaciones;
}

AccesoDTO {

	String nombre;
	String contrasena;
}

UsuarioDTO {
	
	int id;
	String usuario;
	String contrasena;
	String nombre;
	String apellidos;
	String email;
	String telefono;
	Enum estado {"DESEMPLEADO" || "EMPLEADO"};
	DateTime actualizacion;

	ArrayList<EtiquetasDTO> intereses;
}

UsuarioDTOsalida {
	
	UsuarioDTO usuario;
	this.usuario.contrasena = "";

	List<String> errores;
	Timestamp tiempo;
}

UsuariosDTOsalida {
	
	ArrayList<UsuarioDTO> usuarios;

	List<String> errores;
	Timestamp tiempo;
}

EtiquetasDTOsalida {
	
	ArrayList<EtiquetasDTO> intereses;

	List<String> errores;
	Timestamp tiempo;
}

EtiquetaDTO {
	
	int id;
	String nombre;
}

EtiquetasDTOsalida {
	
	ArrayList<EtiquetasDTO> etiquetas;

	List<String> errores;
	Timestamp tiempo;
}

FormacionDTO {

	int id;
	int vacantes;
	int coste;

	String empresa;
	String titulo;
	String descripcion;

	ArrayList<Bytes> imagen;
	ArrayList<EtiquetasDTO> requisitos;

	Enum estado;

	Date inicio;
	Date fin;
}

FormacionesDTOsalida {
	
	ArrayList<FormacionDTO> formaciones;

	List<String> errores;
	Timestamp tiempo; 
}

FormacionesDTOsalida {
	
	FormacionDTO formacion;

	List<String> errores;
	Timestamp tiempo; 
}

